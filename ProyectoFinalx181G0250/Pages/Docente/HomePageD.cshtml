@page
@model ProyectoFinalx181G0250.Pages.Docente.HomePageDModel
@{
    Layout = "_Layout";
}

<div id="divCanales">
    <div>
        <button class="btnCanal" value="Canal General" onclick="cambioCanal(this.value)">Canal General</button>
    </div>
</div>

<button id="btnActualizar"> Actualizar </button>
<form>
    <input type="button" value="Agregar" data-modal="modalAgregar" />
</form>
<div id="divAvisos" class="listaAvisos">

</div>

<template id="plantillaAviso"> 
    <div class="baseAviso">
        <span> </span>
        <label class="docenteAviso"> </label>
        <label class="fechaAviso"> </label>
        <label class="materiaAviso"> </label>
        <label class="mensajeAviso"> </label>
        <a href="javascript:" data-id="0" data-modal="modalEditar">
            <i class="fa-solid fa-pen-to-square"></i>
            </a>
        <a href="javascript:" data-id="0" data-modal="modalEliminar">
            <i class="fas fa-trash"></i>
            </a>
    </div>
</template>
<template id="plantillaCanal">
    <div>
        <button class="btnCanal" onclick="cambioCanal(this.value)"></button>
    </div>
</template>

<div class="modal" id="modalAgregar">
    <div>
        <label>Mensaje</label>
        <form method="post" data-action="AgregarAviso">
            
            <textarea name="mensajeAviso"></textarea>
            <label>Materia:</label>
            <select name="idMateriaAviso"></select>
            <input type="submit" value="Agregar" />
            <input type="button" data-cancel="1" value="Cancelar" />
        </form>
    </div>
</div>

<div class="modal" id="modalEditar">
    <div>
        <label style="display:none;">Mensaje</label>
        <form method="post" data-action="EditarAviso">
            <textarea style="width:100%;" name="mensajeAviso"></textarea>
            <select name="idMateriaAviso"></select>
            <input type="submit" value="Editar" />
            <input type="button" data-cancel="1" value="Cancelar" />
        </form>
    </div>
</div>

<div class="modal" id="modalEliminar">
    <div>
        <form method="post" data-action="EliminarAviso">
            <label>Desea eliminar el aviso?</label>
            <input type="submit" value="Eliminar" />
            <input type="button" data-cancel="1" value="Cancelar" />
        </form>
    </div>
</div>


<script src="~/Scripts/DocenteJs.js" type="text/javascript"></script>
<script src="https://kit.fontawesome.com/1fb484f5a2.js" crossorigin="anonymous"></script>